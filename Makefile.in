# General info
SHELL       = @SHELL@
prefix      = @prefix@
exec_prefix = @exec_prefix@
bindir      = @bindir@
libdir      = @libdir@
datadir     = @datadir@
datarootdir = @datarootdir@
srcdir      = @srcdir@
VPATH       = $(srcdir)

# These may be overridden by make invocators
DESTDIR        =
GOSH           = "@GOSH@"
GAUCHE_CONFIG  = "@GAUCHE_CONFIG@"
GAUCHE_PACKAGE = "@GAUCHE_PACKAGE@"
INSTALL        = "@GAUCHE_INSTALL@" -C

# Other parameters
SOEXT  = @SOEXT@
OBJEXT = @OBJEXT@
EXEEXT = @EXEEXT@
LOCAL_PATHS = "@LOCAL_PATHS@"

# Module-specific stuff
PACKAGE   = graviton

GRAVITON_PLAYER_ARCH = @GRAVITON_PLAYER_ARCH@
ARCHFILES =
SCMFILES  = $(srcdir)/lib/graviton.scm $(srcdir)/lib/graviton/config.scm $(srcdir)/lib/graviton/config-alist.scm $(srcdir)/lib/graviton/jsise.scm
HEADERS   =

TARGET    = $(ARCHFILES)
GENERATED =
CONFIG_GENERATED = Makefile config.log lib/graviton/config-alist.scm $(PACKAGE).gpd

GAUCHE_PKGINCDIR  = "$(DESTDIR)@GAUCHE_PKGINCDIR@"
GAUCHE_PKGLIBDIR  = "$(DESTDIR)@GAUCHE_PKGLIBDIR@"
GAUCHE_PKGARCHDIR = "$(DESTDIR)@GAUCHE_PKGARCHDIR@"

.PHONY: all clean distclean maintainer-clean

all:

install-player:
	(cd player; make install)

clean:
	(cd player; make clean)
	rm -rf core $(TARGET) $(GENERATED) *~ test.log

distclean: clean
	(cd player; make distclean)
	rm -rf $(CONFIG_GENERATED)

maintainer-clean: clean
	(cd player; make maintainer-clean)
	rm -rf $(CONFIG_GENERATED) VERSION
